@import './color.styl'

$bg = $groovy-red

*
  box-sizing border-box

body
  background-color $bg
  color #fff
  display grid
  justify-items center
  margin 0
  padding 0

header
  margin 0
  padding 20px

  h1
    font-size 2.5rem

a
  text-decoration none

  $bg = $groovy-red


img
  border-radius 50px
  height        300px
  object-fit     cover
  width         300px